<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/start">

    <fragment
        android:id="@+id/start"
        android:label="StartFragment"
        android:name="org.tiqr.authenticator.start.StartFragment"
        tools:layout="@layout/fragment_start">

        <action
            android:id="@+id/action_scan"
            app:destination="@id/scan"
            app:popUpTo="@id/start"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/scan"
        android:label="ScanFragment"
        android:name="org.tiqr.authenticator.scan.ScanFragment"
        tools:layout="@layout/fragment_scan">

    <action
        android:id="@+id/open_browser"
        app:destination="@id/browser">

        <argument
            android:name="url"
            app:argType="string"
            app:nullable="false" />
    </action>

    <browser
        android:id="@+id/browser"
        android:label="Browser"
        tools:layout="@layout/destination_browser" />

    <action
        android:id="@+id/open_about"
        app:destination="@id/about" />

    <fragment
        android:id="@+id/about"
        android:label="AboutFragment"
        android:name="org.tiqr.authenticator.about.AboutFragment"
        tools:layout="@layout/fragment_about" />
</navigation>
