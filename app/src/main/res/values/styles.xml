<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Special theme to use as Launch (a.k.a. Splash) -->
    <style name="LaunchTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="android:colorBackground">@color/grey_50</item>

        <item name="android:autofilledHighlight" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
    </style>

    <!-- Buttons -->
    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button" />

    <style name="AppTheme.Button.White">
        <item name="backgroundTint">@color/white</item>
    </style>

    <!-- TextAppearance -->
    <style name="AppTheme.TextAppearance" parent="TextAppearance.MaterialComponents.Body2" />

    <style name="AppTheme.TextAppearance.Main" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="AppTheme.TextAppearance.About" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.Pin">
        <item name="android:fontFamily">@font/animals</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Widgets -->
    <style name="AppTheme.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/AppTheme.TextAppearance</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="AppTheme.Progress">
        <!-- TODO: check if we need a pinkish color from old code -->
        <item name="colorSecondary">@color/primaryDarkColor</item>
    </style>

    <style name="AppTheme.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="AppTheme.Widget.Pin" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/pin_input_background</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Pin</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:longClickable">false</item>
        <item name="android:digits">0123456789</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:maxLength">1</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
