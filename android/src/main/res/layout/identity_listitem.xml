<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp">
    <ImageView android:id="@+id/identity_provider_logo"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
        <TextView android:id="@+id/displayName"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="16dp" android:textStyle="bold" />
        <TextView android:id="@+id/identifier" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:textSize="14dp" />
        <TextView android:id="@+id/blocked" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:textSize="14dp"
            android:textColor="#DA222D" android:text="@string/identity_blocked" />
    </LinearLayout>
    <ImageView android:layout_width="28dp"
               android:layout_height="28dp"
               android:src="@drawable/icon_edit"
               android:layout_gravity="center_vertical"/>
</LinearLayout>